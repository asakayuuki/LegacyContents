<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingTop="20sp"
            android:paddingBottom="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="收入:"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/accountListByMonth_monthTotalIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="支出:"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/accountListByMonth_monthTotalOutcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="结余:"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/accountListByMonth_monthTotalRemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/recordListByMonth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="bottom">

            <ImageButton
                android:id="@+id/toLeft"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/left"
                android:gravity="top"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/accountListByMonth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_weight="0.43" />

            <ImageButton
                android:id="@+id/toRight"
                android:layout_width="54dp"
                android:layout_height="50dp"
                android:background="@drawable/right" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>