<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="记"
            android:textColor="#FFFFFF"
            android:textSize="70dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:text="今日:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:text="收入:"/>

            <TextView
                android:id="@+id/activityMain_tagTodayTotalIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textSize="17dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:text="支出:"/>
            <TextView
                android:id="@+id/activityMain_tagTodayTotalOutcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17dp"
                android:gravity="right"
                android:textColor="#FFFFFF"
                android:text="结余:"/>
            <TextView
                android:id="@+id/activityMain_tagTodayTotalRemain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="right"
            android:text="本月:"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="right"
            android:text="收入:"/>

        <TextView
            android:id="@+id/activityMain_tagMonthTotalIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="right"
            android:text="支出:"/>
        <TextView
            android:id="@+id/activityMain_tagMonthTotalOutcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17dp"
            android:gravity="right"
            android:text="结余:"/>
        <TextView
            android:id="@+id/activityMain_tagMonthTotalRemain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">
        <ImageButton
            android:id="@+id/activityMain_listRecords"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:layout_marginLeft="130dp"
            android:src="@drawable/records"/>
        <ImageButton
            android:id="@+id/activityMain_addRecord"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#00000000"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/add"/>
    </LinearLayout>

</LinearLayout>